<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".new_profile"
    tools:layout_editor_absoluteY="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addprofile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/man"
        app:layout_constraintBottom_toTopOf="@+id/add_profile_image_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_profile_image_btn"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/cantarell"
        android:text="@string/add_image"
        android:textColor="@color/background_material_light_1"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_name_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addprofile_image" />

    <EditText
        android:id="@+id/add_name_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:gravity="center"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:padding="0dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/add_Roll_no_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_profile_image_btn" />

    <EditText
        android:id="@+id/add_Roll_no_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:gravity="center"
        android:hint="@string/enter_roll_no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/np_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_name_field" />

    <EditText
        android:id="@+id/np_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:gravity="center"
        android:hint="Enter Phone No."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/np_add_year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_Roll_no_field" />

    <EditText
        android:id="@+id/np_blood"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edit_background"
        android:ems="10"
        android:fontFamily="@font/cantarell"
        android:gravity="center"
        android:hint="Enter Blood Group"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/cancel_new_profile_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/np_add_year"
        android:elevation="5dp"/>

    <Spinner
        android:id="@+id/np_add_year"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginStart="42dp"
        android:background="@drawable/edit_background"
        android:foregroundGravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/np_blood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/np_phone" />


    <Button
        android:id="@+id/new_p_submit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="52dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="52dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/button_green_background"
        android:fontFamily="@font/cantarell"
        android:text="@string/submit"
        android:textColor="@color/background_material_light_1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancel_new_profile_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancel_new_profile_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/new_p_submit_btn"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/cantarell"
        android:text="@string/button"
        android:textColor="@color/background_material_light_1"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_p_submit_btn"
        app:layout_constraintTop_toBottomOf="@+id/np_blood" />


</android.support.constraint.ConstraintLayout>